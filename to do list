class ToDoList:
    def __init__(self):
        self.tasks = []

    def show_tasks(self):
        if not self.tasks:
            print("âœ… Your to-do list is empty.")
        else:
            print("\nğŸ“‹ Your To-Do List:")
            for i, task in enumerate(self.tasks, 1):
                status = "âœ”ï¸" if task['completed'] else "âŒ"
                print(f"{i}. {task['title']} [{status}]")

    def add_task(self, title):
        self.tasks.append({'title': title, 'completed': False})
        print(f"Task added: {title}")

    def update_task(self, index, new_title):
        if 0 <= index < len(self.tasks):
            self.tasks[index]['title'] = new_title
            print(f"Task updated to: {new_title}")
        else:
            print("â— Invalid task number.")

    def mark_complete(self, index):
        if 0 <= index < len(self.tasks):
            self.tasks[index]['completed'] = True
            print(f"Task marked as completed: {self.tasks[index]['title']}")
        else:
            print("â— Invalid task number.")

    def delete_task(self, index):
        if 0 <= index < len(self.tasks):
            removed = self.tasks.pop(index)
            print(f"ğŸ—‘ï¸ Task deleted: {removed['title']}")
        else:
            print("â— Invalid task number.")

def main():
    todo = ToDoList()
    while True:
        print("\n1. Show Tasks\n2. Add Task\n3. Update Task\n4. Mark as Complete\n5. Delete Task\n6. Exit")
        choice = input("Enter your choice (1-6): ")

        if choice == '1':
            todo.show_tasks()
        elif choice == '2':
            title = input("Enter task title: ")
            todo.add_task(title)
        elif choice == '3':
            todo.show_tasks()
            index = int(input("Enter task number to update: ")) - 1
            new_title = input("Enter new task title: ")
            todo.update_task(index, new_title)
        elif choice == '4':
            todo.show_tasks()
            index = int(input("Enter task number to mark complete: ")) - 1
            todo.mark_complete(index)
        elif choice == '5':
            todo.show_tasks()
            index = int(input("Enter task number to delete: ")) - 1
            todo.delete_task(index)
        elif choice == '6':
            print("ğŸ‘‹ Exiting To-Do List. Have a productive day!")
            break
        else:
            print("âŒ Invalid choice, please try again.")

if __name__ == "__main__":
    main()
